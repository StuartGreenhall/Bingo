@model SearchViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row row-backbordered">

    <div class="col-sm-12">
      <div class="panel panel-default panel-floating panel-floating-inline">
        <div class="panel-body">
          <div class="panel-content">
            <!--<h5 class="m-b-0"><strong>Input a search term to get statitics</strong></h5>
            <p class="text-muted"><small>We'll notify you and promise never to spam.</small></p>-->
          </div>
          <div class="panel-actions">

            
            <form asp-controller="Search" asp-action="Index" method="GET" class="form-horizontal"> 
                    <div class="col-md-10">
                        <label asp-for="SearchTerm" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                        <input asp-for="SearchTerm" class="form-control" />
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                    <!--//asp-for="SearchTerm"?-->
            </form>

            <span id="helpBlock" class="help-block">A block of help text that breaks onto a new line and may extend beyond one line.</span>
          </div>
        </div>
      </div>
    </div>
</div>
